{
    "extends": "eslint:recommended",
    "globals": {
        // SiteVision Variables
        "jQuery": false,
        "$svjq": false,
        // Boilerplate variables
        "AF": true,
        "_af": true,
        // Script modules
        "request": false,
        "require": false,
        "java": false,
        "scriptVariables": false
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "script",
        "ecmaFeatures": {
            "globalReturn": false,
            "impliedStrict": false,
            "jsx": false
        }
    },
    "env": {
        "browser": true,
        "jquery": true,
        "nashorn": true
    },
    "rules": {
        "strict": [
            "error",
            "function"
        ],
        "lines-around-directive": 0,
        // "no-unexpected-multiline": 0,
        "no-tabs": "error",
        "indent": 0,
        "semi": [
            "error",
            "always"
        ],
        "eqeqeq": [
            "error",
            "always"
        ],
        "curly": "error",
        "quotes": [
            1,
            "single"
        ],
        "brace-style": ["error", "1tbs", { "allowSingleLine": true }],
        "one-var": [
            "error",
            "always"
        ],
        "no-var": 0,
        "one-var-declaration-per-line": [
            "error",
            "initializations"
        ],
        "no-underscore-dangle": 0,
        "func-names": [
            "error",
            "never"
        ],
        "consistent-return": 0,
        "object-shorthand": [
            "error",
            "never"
        ],
        "object-curly-spacing": [
            "error",
            "always"
        ],
        "comma-dangle": [
            "error",
            "never"
        ],
        "no-multi-spaces": 0,
        "no-unused-expressions": [
            "error",
            {
                "allowShortCircuit": true,
                "allowTernary": true
            }
        ],
        "no-param-reassign": 0,
        "prefer-rest-params": 0,
        "prefer-arrow-callback": 0,
        "padded-blocks": 0,
        "key-spacing": 0,
        "no-empty": 0,
        "prefer-template": 0,
        "no-prototype-builtins": 0,
        "prefer-destructuring": 0,
        "no-console": 0
    }
}
